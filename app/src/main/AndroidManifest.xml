<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cbu.medical_survey_app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        >
        <activity android:name=".activities.StartActivity"
            android:windowSoftInputMode="adjustPan"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SurveyActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".activities.StartPopupActivity" android:theme="@style/Theme.AppCompat.Dialog" android:label=""/>
        <activity android:name=".activities.MenuPopupActivity" android:theme="@style/Theme.AppCompat.Dialog" android:label=""/>
        <activity android:name=".activities.SubActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".activities.PopupActivity" android:theme="@style/Theme.AppCompat.Dialog" android:label=""/>
    </application>

</manifest>